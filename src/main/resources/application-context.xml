<?xml version="1.0" encoding="UTF-8"?>
<beans 
	xmlns="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
		<context:annotation-config/>
	
		<bean id="parentBean" class="herencia.ExampleHerenciaBean" abstract="true">
			<property name="nombre" value="Paola"/>
			<property name="apellido" value="Pizero"/>
			<property name="edad" value="20"/>
		</bean>
		
		<bean id="paola" parent="parentBean"/>
		
		<bean id="berta" parent="parentBean">
			<property name="nombre" value="Berta"/>
			<property name="apellido" value="Blero"/>
		</bean>
		
		<bean id="paolaVieja" parent="parentBean">
			<property name="edad" value="100"/>
		</bean>

</beans>