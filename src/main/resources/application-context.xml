<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:util="http://www.springframework.org/schema/util" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-4.0.xsd
		http://www.springframework.org/schema/util 
		http://www.springframework.org/schema/util/spring-util-4.0.xsd">
	
	
	<bean id="personaBean" class="spel.Persona" 
		p:nombre="Carlos"
		p:apellido="Hernández Flores" 
		p:edad="23"/>
	
	
	<bean id="persona" class="spel.Persona" 
		p:nombre="Carlos"
		p:apellido="Hernández Flores" 
		p:edad="#{new java.lang.Double(T(java.lang.Math).random()*20+15).intValue()}"/> 
	
	<bean id="hermana" class="spel.Persona"
		p:nombre="Lucía"
		p:apellido="#{persona.apellido}"
		p:edad="#{new java.lang.Integer(persona.edad) &lt; 30? new java.lang.Integer(persona.edad) + 4: new java.lang.Integer(persona.edad)-4}"/>

</beans>