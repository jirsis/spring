<?xml version="1.0" encoding="UTF-8"?>
<beans 
	xmlns="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
		<context:annotation-config/>
		
	<bean id="formatServiceTableDefault" class="formatter.TableFormatter"/>
	
	<bean id="formatServiceTableSingleton" class="formatter.TableFormatter" scope="singleton"/>
	<bean id="formatServiceTablePrototype" class="formatter.TableFormatter" scope="prototype"/>
	
	
	<bean id="formatServiceTableConstructorArg" class="formatter.TableFormatter">
		<constructor-arg type="java.lang.String" value="a"/>
	</bean>
	
	<bean id="formatServiceTableProperties" class="formatter.TableFormatter">
		<property name="verticalRule" value="x"/>
	</bean>

	<bean id="formatServiceTableLazy" class="formatter.TableFormatter" lazy-init="true"/>
	
	<bean id="formatServiceTableInit" class="formatter.TableFormatter" lazy-init="true" init-method="helloWorld"/>
	
	<bean id="formatServiceTableDestroy" class="formatter.TableFormatter" destroy-method="seeYou"/>
	
	
	
</beans>