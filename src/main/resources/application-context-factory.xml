<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<bean id="formatServiceFactoryMethod" class="formatter.TableFormatter" lazy-init="true" factory-method="makeInstance"/>
	
	<bean id="factoryBeans" class="formatter.FactoryFormatter"/>	
	<bean id="formatServiceFactory" class="formatter.Formatter" lazy-init="true"
		factory-bean="factoryBeans"
		factory-method="makeTableFormatterInstance"/>
			
</beans>